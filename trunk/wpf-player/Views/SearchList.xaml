<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	xmlns:local="clr-namespace:wpf_player"
	x:Class="wpf_player.SearchList"
	d:DesignWidth="640" d:DesignHeight="480">
	<UserControl.Resources>
		<local:SearchListModel x:Key="SearchListModelDataSource" />
	</UserControl.Resources>

	<Grid x:Name="LayoutRoot" DataContext="{Binding Source={StaticResource SearchListModelDataSource}}">
		<Grid Margin="8">
			<ScrollViewer Margin="8,50,8,8">
				<DataGrid/>
			</ScrollViewer>
			<TextBox Height="24" Margin="140,15,106,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
			<TextBlock HorizontalAlignment="Left" Height="24" Margin="8,15,0,0" TextWrapping="Wrap" Text="Search Query" VerticalAlignment="Top" Width="128" FontWeight="Bold" FontSize="13.333" Foreground="White"/>
			<Button Content="Search" HorizontalAlignment="Right" Height="24" Margin="0,15,8,0" VerticalAlignment="Top" Width="94" BorderThickness="1"/>
		</Grid>
	</Grid>
</UserControl>
