<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
	x:Class="wpf_player.LocalStoreWindow"
	x:Name="Window"
	Title="LocalStoreWindow"
	Width="640" Height="480">

	<Grid x:Name="LayoutRoot">
		<Grid.RowDefinitions>
			<RowDefinition Height="128.18"/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<ScrollViewer Margin="24" Grid.Row="1">
			<DataGrid/>
		</ScrollViewer>
		<StackPanel Grid.Row="0">
			<StackPanel Height="44" Orientation="Horizontal">
				<Image Source="Images\db.png" HorizontalAlignment="Left" Width="32" Height="32" Margin="12,6,0,6"/>
				<TextBlock TextWrapping="Wrap" Margin="35,0,0,0" FontSize="18.667" FontWeight="Bold" VerticalAlignment="Center"><Run Language="it-it" Text="Local Music Store"/></TextBlock>
			</StackPanel>
			<StackPanel Height="29" Orientation="Horizontal">
				<TextBox TextWrapping="Wrap" Text="TextBox"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>